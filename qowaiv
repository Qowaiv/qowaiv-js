#!/usr/bin/env nu

def main [] {
    nu ./qowaiv --help    
}

# build qowaiv packages
def "main build" [] {
    npm run build --workspaces --if-present
}

# Test the qowaiv package
def "main test" [] {
    npm run test --workspaces --if-present
}

def "main pack" [
] {
    main build
    main test
    npm pack --workspaces
}

def "main publish" [
    tag: string # The tag of the image (e.g., 0.0.1)!
] {
    open package.json | update version $tag | save package.json -f

    main build
    main test

    if 'GITHUB_TOKEN' not-in $env {
        $env.GITHUB_TOKEN = (gh auth token)
    }

    (
        "//npm.pkg.github.com/:_authToken=" + $env.GITHUB_TOKEN + "\n\r"
             | save --append .npmrc -f
    )
    
    npm publish
}

def "main release" [
    tag: string # The tag of the image (e.g., 0.0.1)!
] {
    open package.json | update version $tag | save package.json -f

    main build
    main test

    (
        "//registry.npmjs.org/:_authToken=" + $env.NODE_AUTH_TOKEN + "\n\r"
             | save --append .npmrc -f
    )
           
    npm publish --access public
}
